{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }, {"path": "$DESKTOP"}, {"path": "$DESKTOP/**"}]
    },
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-exists"
  ]
}